
<%- include('../layouts/header',{title:'create new Book'}); -%>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="alert alert-success text-center">Create a new pet </h1>
            </div>
        </div>
        <div class="row">
        <form action="/books" method="post" class="row" >
            <div class="col-6">
                <label for="title" class="form-label">titulo</label>
                <input type="text" name="title" id="title" class="form-control" required>
            </div>
            <div class="col-6">
                <label for="author" class="form-label">autor</label>
                <input type="text" name="author" id="author" class="form-control" required>
            </div>
            <div class="col-6">
                <form>
                    <form>
                        <div class="form-group">
                            <label for="publicationYear">Fecha:</label>
                            <input type="date" class="form-control" id="publicationYear" name="publicationYear" required>
                        </div>

            </div>
            <div class="col-6">
                <label for="isbn" class="form-label">isbn</label>
                <input type="number" name="isbn" id="isbn" class="form-control" required>
            </div>
            <div class="col-6">
                <label for="language" class="form-label">idioma</label>
                <input type="text" name="language" id="language" class="form-control" required>
             <div class="col-6">
                <label for="pageCount" class="form-label">paginas</label>
                <input type="number" name="pageCount" id="pageCount" class="form-control" required>
            </div>
            <div class="col-6">
                <label for="price" class="form-label">precio</label>
                <input type="number" name="price" id="price" class="form-control" required>
                <div class="col-6">
                    <label for="isAvailable" class="form-label">disponibilidad</label>
                    <select name="type" id="isAvailable" class="form-select" required>
                        <option value="disponible">disponible</option>
                        <option value="agotado">agotado</option>
                    </select>
                </div>
            <div class="col-12 d-grid mt-4">
                <button type="submit" class="btn btn-success">Create</button>
            </div>
        </form>
    </div>
    <div class="container">
    <div class="row">
           <div class="col-12 d-grid mt-4">
            <a class="btn btn-primary" href="/books" role="button">back to list of pets</a>
           </div>
    </div>
</div>
</div>
   
<%- include('../layouts/footer'); -%>
